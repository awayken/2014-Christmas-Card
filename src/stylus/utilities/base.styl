// Base styles

$size-base = 1.125em;

$color-white = rgb(255, 255, 255);
$color-black = rgb(0, 0, 0);
$color-sepia = rgb(242, 240, 200);
$color-red = rgb(237, 27, 37);

* {
    box-sizing: border-box;
}

body {
    background: $color-white;
    color: $color-black;
    font-size: $size-base;
}

p + p {
    margin: 0 0 1.5em;
}
