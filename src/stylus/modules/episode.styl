// Episode module

.episode {
    color: $color-white;
    padding: 0 0 3em;

    &--1 {
        background: url("../images/episode1.jpg") no-repeat center top $color-gray;
        background-size: cover;

        @media screen and (min-width: 767px) {
            background-attachment: fixed;
            background-position: center -7em;
        }

        @media screen and (min-width: 1023px) {
            background-attachment: fixed;
            background-position: center -25em;
        }

        @media screen and (min-width: 1279px) {
            background-position: center -40em;
        }
    }

    &--top {
        background: $color-red;
        background: $color-red-transparent;
        color: $color-white;
    }

    &--top-content {
        @extend $cinch;
        padding: 1em;

        @media screen and (min-width: 767px) {
            padding: 5em 2em 1em;
        }
    }

    &--number {
        background: url("../images/underline-white.png") repeat-x 0 bottom;
        background-size: auto 2px;
        display: inline-block;
        font-family: $font-sackers-heavy;
        font-size: 0.8em;
        line-height: 1;
        margin: 0 0 0.25em;
        padding: 0 0 0.5em;
        text-transform: uppercase;

        @media screen and (min-width: 767px) {
            font-size: 1em;
        }
    }

    &--title {
        font-size: 1.5em;
        line-height: 1.2;
        margin: 0;
        text-align: left;

        @media screen and (min-width: 567px) {
            font-size: 2em;
        }

        @media screen and (min-width: 767px) {
            font-size: 3em;
        }
    }

    &--content {
        @extend $cinch;
        padding: 1em 2em;

        p {
            font-family: $font-flamba-light;
            font-size: 1.35em;
            line-height: 1.5;
            margin: 0;
        }
    }

    &--sharing {
        display: inline-block;
        margin-top: 2em;
        vertical-align: top;
    }

    &--button {
        background: $color-white;
        background: transparentify($color-white, $color-white, 0.6);
        color: $color-black;
    }
}
