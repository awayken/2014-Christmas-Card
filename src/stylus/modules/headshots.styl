// The Headshot modules

.headshots {
    list-style: none;
    padding: 0;
    text-align: center;

    &--box {
        margin: 0 0 1em 0;
        max-width: 400px;
        text-align: left;

        @media screen and (min-width: 321px) {
            display: inline-block;
            width: 49%;
            vertical-align: top;
        }
    }

    &--name {
        font-family: $font-flamba-light;
        line-height: 1.3;
        margin: 0;
        text-align: left;
        text-transform: none;
    }

    &--job {
        display: block;
        font-style: italic;
        line-height: 1.3;
    }

    &--portrait {
        border-radius: 4px;
        display: block;
        margin: 0 auto 8px auto;
    }
}
