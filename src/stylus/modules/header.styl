// Style the header.

.header {
    background: $color-sepia;
    height: 4.11em;
    height: 11vh;
    padding: 1em 2.22em;
    text-align: right;

    .block {
        height: 100%;
        padding: 0;
    }

    &--heading {
        height: 100%;
        margin: 0;
        text-align: right;
    }

    &--link {
        height: 100%;
    }

    &--logo {
        height: auto;
        max-height: 100%;
        max-width: 100%;
        vertical-align: top;
        width: auto;
    }
}
