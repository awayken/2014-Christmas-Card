// Style the header.

.header {
    background: $color-sepia;
    height: 4.11em;
    height: 22vh;
    padding: 1em 2.22em;

    @media screen and (min-height: 400px) {
        height: 16vh;
    }

    @media screen and (min-height: 567px) {
        height: 11vh;
    }

    .block {
        height: 100%;
        padding: 0;
    }

    &--heading {
        height: 100%;
        margin: 0;

        @media screen and (min-width: 567px) {
            text-align: right;
        }
    }

    &--link {
        height: 100%;
    }

    &--logo {
        height: auto;
        max-height: 100%;
        max-width: 100%;
        vertical-align: top;
        width: auto;
    }
}
